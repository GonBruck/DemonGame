{
  "manifest_version": 3,
  "name": "Demon Assit Tool",
  "version": "1.0",
  "description": "An extension that provides different tools for the Demonic Scans game.",
  "action": {
      "default_popup": "popup.html",
      "default_icon": "demon-logo.png"
  },
  "permissions": [
      "tabs",
      "storage"
  ],
  "host_permissions": [
    "https://demonicscans.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://demonicscans.org/*"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  }
}